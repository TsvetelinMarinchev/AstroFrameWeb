@model AstroFrameWeb.Data.Models.ViewModels.GalaxyCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Galaxy</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GalaxyType" class="control-label"></label>
                <select asp-for="GalaxyType" class="form-control" asp-items="ViewBag.GalaxyTypes"></select>
                <span asp-validation-for="GalaxyType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfStars" class="control-label"></label>
                <input asp-for="NumberOfStars" class="form-control" />
                <span asp-validation-for="NumberOfStars" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistanceFromEarth" class="control-label"></label>
                <input asp-for="DistanceFromEarth" class="form-control" />
                <span asp-validation-for="DistanceFromEarth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl">Image URL</label>
                <input asp-for="ImageUrl" class="form-control" id="imageUrlInput" placeholder="https://example.com/galaxy.jpg" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-3">
                <img id="imagePreview" src="" alt="Preview" style="max-width: 300px; display: none; border-radius: 10px; box-shadow: 0 0 10px cyan;" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById("imageUrlInput").addEventListener("input", function () {
            const url = this.value;
            const img = document.getElementById("imagePreview");
            if (url && url.startsWith("http")) {
                img.src = url;
                img.style.display = "block";
            } else {
                img.style.display = "none";
            }
        });
    </script>
}
