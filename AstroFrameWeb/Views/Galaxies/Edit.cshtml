@model AstroFrameWeb.Data.Models.Galaxy

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Galaxy</h1>
<hr />

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreatorId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GalaxyType"></label>
        <select asp-for="GalaxyType" class="form-control" asp-items="ViewBag.GalaxyTypes"></select>
        <span asp-validation-for="GalaxyType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumberOfStars"></label>
        <input asp-for="NumberOfStars" class="form-control" />
        <span asp-validation-for="NumberOfStars" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DistanceFromEarth"></label>
        <input asp-for="DistanceFromEarth" class="form-control" />
        <span asp-validation-for="DistanceFromEarth" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiscoveredOn"></label>
        <input asp-for="DiscoveredOn" class="form-control" />
        <span asp-validation-for="DiscoveredOn" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-2">Back to List</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}