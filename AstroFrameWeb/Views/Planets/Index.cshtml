@model AstroFrameWeb.Data.Models.Planet

@{
    ViewData["Title"] = "Planet View";
}

<style>
    body {
        background-image: url('/images/StarIndexBody.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: white;
    }

    .planet-img {
        width: 400px;
        height: auto;
        border-radius: 12px;
        box-shadow: 0 0 20px cyan;
    }

    .planet-card {
        background-color: rgba(0,0,0,0.5);
        border-radius: 15px;
        padding: 20px;
        margin-top: 30px;
        color: white;
    }

    .btn-nav {
        background-color: cyan;
        border-radius: 8px;
        color: black;
        padding: 10px 20px;
        font-weight: bold;
    }
</style>

<h1 class="text-center">@Model.Name</h1>
<form asp-controller="Planets" asp-action="Index" method="get" class="mb-3 text-center">
    <div class="input-group justify-content-center">
        <input type="text" name="searchStr" class="form-control w-50" placeholder="Search planets by name..." value="@ViewBag.SearchStr" />
        <button type="submit" class="btn btn-primary ms-2">Search</button>
    </div>
</form>

<div class="text-center">
    <img src="@Url.Content("~/images/" + Model.ImageUrl)" alt="@Model.Name" class="planet-img" />
</div>

<div class="container planet-card text-center">
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Mass:</strong> @Model.Mass Earth masses</p>
    <p><strong>Radius:</strong> @Model.Radius Earth radii</p>
    <p><strong>Distance:</strong> @Model.DistanceFromEarth light years</p>
    <p><strong>Discovered:</strong> @Model.DiscoveredAgo</p>
    <p><strong>Galaxy:</strong> @Model.Galaxy?.Name</p>
    <p><strong>Star:</strong> @Model.Star?.Name</p>
</div>

<div class="mt-4 d-flex justify-content-between">
    <a class="btn btn-nav"
       href="@Url.Action("Index", "Planets", new { index = (int)ViewBag.Index - 1, searchStr = ViewBag.SearchStr })">
        ← Previous
    </a>
    <a class="btn btn-nav"
       href="@Url.Action("Index", "Planets", new { index = (int)ViewBag.Index + 1, searchStr = ViewBag.SearchStr })">
        Next →
    </a>
</div>
