@model IEnumerable<AstroFrameWeb.Data.Models.StarType>

@{
    ViewData["Title"] = "Star Types";
}

<style>
    .star-type-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
        .star-type-card

    {
        background-color: rgba(0, 0, 0, 0.6);
        padding: 20px;
        border-radius: 10px;
        width: 300px;
        text-align: center;
        color: white;
        box-shadow: 0 0 15px cyan;
    }

    .star-type-card img {
        width: 100%;
        border-radius: 8px;
    }

    .btn-link {
        margin-top: 10px;
        display: inline-block;
        background-color: cyan;
        padding: 8px 12px;
        color: black;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
    }

    body {
        background-image: url('/images/StarIndexBody.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        color: white;
    }
</style>
<h1 class="text-center">Star Types</h1>

<div class="star-type-grid">
    @foreach (var type in Model)
    {
        <div class="star-type-card">
            <img src="~/images/@type.ImageUrl" alt="@type.Name" />
            <h3>@type.Name</h3>
            <p>@type.Description</p>
            <a class="btn-link" href="@Url.Action("StarTypeView", "StarTypes", new { starTypeId = type.Id })">
                View Stars
            </a>
        </div>
    }
</div>
