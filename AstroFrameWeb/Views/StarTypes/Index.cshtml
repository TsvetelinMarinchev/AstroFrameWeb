@model IEnumerable<AstroFrameWeb.Data.Models.StarType>


@{
    ViewData["Title"] = "Star Types";
}

<style>
    .star-type-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .star-type-card {
        background-color: rgba(0, 0, 0, 0.75);
        padding: 15px;
        border-radius: 10px;
        width: 220px;
        text-align: center;
        color: white;
        box-shadow: 0 0 10px cyan;
        transition: transform 0.2s ease-in-out;
    }

        .star-type-card:hover {
            transform: scale(1.03);
        }

        .star-type-card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 10px;
        }

    .btn-link {
        margin-top: 10px;
        display: inline-block;
        background-color: cyan;
        padding: 8px 12px;
        color: black;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
    }

    body {
        background-image: url('/images/StarIndexBody.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        color: white;
        font-family: 'Segoe UI', sans-serif;
    }

    h1 {
        margin-top: 20px;
        text-align: center;
        font-size: 36px;
    }
</style>

<h1 class="text-center">Star Types</h1>

<div class="star-type-grid">
    @foreach (var type in Model)
    {
        <div class="star-type-card">
            <img src="~/images/@type.ImageUrl" alt="@type.Name" />
            <h3>@type.Name</h3>
            <p>@type.Description</p>
            <a class="btn-link" href="@Url.Action("StarTypeView", "StarTypes", new { starTypeId = type.Id })">
                View Stars
            </a>
        </div>
    }
</div>
