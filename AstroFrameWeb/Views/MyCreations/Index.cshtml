@model AstroFrameWeb.Data.Models.ViewModels.MyCreationViewModel

<h2 class="text-center text-info mb-4">My Creations</h2>
<h4 class="text-warning">⭐ My Stars</h4>
@if (!Model.Stars.Any())
{
    <p>No stars created.</p>
}
else
{
    <table class="table table-dark table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Galaxy</th>
                <th>Type</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var star in Model.Stars)
            {
                <tr>
                    <td>@star.Name</td>
                    <td>@star.Galaxy?.Name</td>
                    <td>@star.StarType?.Name</td>
                    <td>$@star.Price</td>
                    <td>
                        <a asp-controller="Stars" asp-action="Edit" asp-route-id="@star.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-controller="Stars" asp-action="Delete" asp-route-id="@star.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<h4 class="text-success mt-4">🌍 My Planets</h4>
@if (!Model.Planets.Any())
{
    <p>No planets created.</p>
}
else
{
    <table class="table table-dark table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Galaxy</th>
                <th>Star</th>
                <th>Mass</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var planet in Model.Planets)
            {
                <tr>
                    <td>@planet.Name</td>
                    <td>@planet.Galaxy?.Name</td>
                    <td>@planet.Star?.Name</td>
                    <td>@planet.Mass</td>
                    <td>
                        <a asp-controller="Planets" asp-action="Edit" asp-route-id="@planet.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-controller="Planets" asp-action="Delete" asp-route-id="@planet.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<h4 class="text-primary mt-4">🌌 My Galaxies</h4>
@if (!Model.Galaxies.Any())
{
    <p>No galaxies created.</p>
}
else
{
    <table class="table table-dark table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Stars</th>
                <th>Distance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var galaxy in Model.Galaxies)
            {
                <tr>
                    <td>@galaxy.Name</td>
                    <td>@galaxy.GalaxyType</td>
                    <td>@galaxy.NumberOfStars</td>
                    <td>@galaxy.DistanceFromEarth ly</td>
                    <td>
                        <a asp-controller="Galaxies" asp-action="Edit" asp-route-id="@galaxy.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-controller="Galaxies" asp-action="Delete" asp-route-id="@galaxy.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}